<h2>Add an Answer</h2>
<div>
  <form>
      <div class="form-group">
        <label for="author">Your Name</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="text">Answer</label>
        {{textarea cols="80" rows="6" value=text }}
      </div>
      <button {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
