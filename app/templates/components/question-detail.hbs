{{#if updateForm}}
  <div>
    <form>
      <div class="form-group">
        <label for="text">Question</label>
        {{input value=text id="text" placeholder=question.text}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="notes">Notes</label>
        {{input value=notes id="notes" placeholder=question.notes}}
      </div>

      <button {{action 'update' question}}>Save</button>
    </form>
  </div>
{{else}}
  <h3>{{question.text}}</h3>
  <h4>  - {{question.author}}</h4>
  <h5>{{question.notes}}</h5>
  <button {{action 'showForm'}}>Edit Question</button>
{{/if}}
